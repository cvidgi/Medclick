<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/flow_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="0dp">

                        <EditText
                            android:id="@+id/Polis_OMC"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/back_of_person_info"
                            android:fontFamily="@font/manrope_regular"
                            android:gravity="center_vertical"
                            android:hint="16 цифр"
                            android:inputType="textCapSentences"
                            android:paddingStart="18dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@+id/back_btn5"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintTop_toBottomOf="@+id/textView21"
                            mask:layout_constraintEnd_toEndOf="parent"
                            mask:layout_constraintStart_toStartOf="parent"
                            tools:textColor="@color/thin_text" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/manrope_medium"
                            android:text="@string/Данные"
                            android:textColor="#000000"
                            android:textSize="30sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/manrope_light"
                            android:text="Здесь вы можете отредактировать свои перснональные данные"
                            android:textColor="@color/thin_text"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView3" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/manrope_regular"
                            android:text="@string/Имя"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Surname" />

                        <EditText
                            android:id="@+id/Name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/back_of_person_info"
                            android:elevation="2dp"
                            android:ems="10"
                            android:fontFamily="@font/manrope_light"
                            android:inputType="textCapSentences"
                            android:paddingStart="18dp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView8"
                            tools:targetApi="lollipop" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/manrope_regular"
                            android:text="@string/Фамилия"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/manrope_regular"
                            android:text="Отчество:"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Name" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/manrope_regular"
                            android:text="Дата рождения:"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/middle_name" />

                        <EditText
                            android:id="@+id/Surname"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/back_of_person_info"
                            android:elevation="2dp"
                            android:ems="10"
                            android:fontFamily="@font/manrope_light"
                            android:inputType="textCapSentences"
                            android:paddingStart="18dp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView10"
                            tools:targetApi="lollipop" />


                        <EditText
                            android:id="@+id/middle_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/back_of_person_info"
                            android:elevation="2dp"
                            android:ems="10"
                            android:fontFamily="@font/manrope_light"
                            android:inputType="textCapSentences"
                            android:paddingStart="18dp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView11" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/back_of_person_info"
                            android:drawableStart="@drawable/ic_event_black_24dp_1"
                            android:drawablePadding="8dp"
                            android:elevation="2dp"
                            android:ems="10"
                            android:fontFamily="@font/manrope_light"
                            android:gravity="center_vertical"
                            android:paddingStart="18dp"
                            android:singleLine="false"
                            android:text="Укажите вашу дату рождения"
                            android:textColor="@color/thin_text"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView12"
                            tools:targetApi="lollipop" />

                        <TextView
                            android:id="@+id/error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16sp"
                            android:enabled="false"
                            android:fontFamily="@font/manrope_regular"
                            android:textColor="@color/red"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/middle_name" />

                        <Button
                            android:id="@+id/back_btn5"
                            android:layout_width="140dp"
                            android:layout_height="48dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/btn1"
                            android:drawableLeft="@drawable/ic_back_new"
                            android:fontFamily="@font/manrope_regular"
                            android:text="@string/Назад"
                            android:textAllCaps="false"
                            android:textColor="@color/btn_text"
                            android:textSize="15sp"
                            app:backgroundTint="@color/back_btn"
                            app:backgroundTintMode="src_over"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <Button
                            android:id="@+id/Save_data"
                            android:layout_width="140dp"
                            android:layout_height="48dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/btn1"
                            android:fontFamily="@font/manrope_regular"
                            android:text="Сохранить"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            app:backgroundTint="@color/btnStartColor"
                            app:backgroundTintMode="src_in"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:fontFamily="@font/manrope_regular"
                            android:text="Полис ОМС:"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/date" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>